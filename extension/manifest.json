{
  "manifest_version": 3,
  "name": "CMS Highlighter",
  "version": "1.0.0",
  "description": "Highlight words and phrases by category on CMS sites",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://cms.bazaarvoice.com/*",
    "https://workbench.bazaarvoice.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://cms.bazaarvoice.com/*",
        "https://workbench.bazaarvoice.com/*"
      ],
      "js": ["matcher-core.js", "content.js"],
      "css": ["highlight.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CMS Highlighter"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
